[% //get root instance
	var jobscript = amroc_testrun.allInstances.get(0);
%]
### [% out.print(jobscript.filename); %] ###

#!/bin/bash

[% //include bsub arguments
	for (bsub_arg in jobscript.bsub_args) {
		out.println("#BSUB -" + bsub_arg.key + " " + bsub_arg.value);
	}
%]

[% //load modules
	for (module in jobscript.modules) {
		out.println("module load " + module);
	}
%]

[% //execute commands
	for (cmd in jobscript.commands) {
		out.println(cmd);
	}
%]