<?xml version="1.0" encoding="ASCII"?>
<occi:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" xmlns:occi="http://schemas.ogf.org/occi" name="OCCI Platform" scheme="http://schemas.ogf.org/occi/platform#">
  <import href="Core.xmi#/"/>
  <kinds term="application" scheme="http://schemas.ogf.org/occi/platform#" title="Application Resource">
    <attributes name="occi.app.name" mutable="true" required="true" description="Name of the application.">
      <type href="http://www.eclipse.org/emf/2002/Ecore#//EString"/>
    </attributes>
    <attributes name="occi.app.context" mutable="false" required="true" description="URL for contextualizing the app." type="//@types.2"/>
    <attributes name="occi.app.url" mutable="false" required="true" description="DNS entry." type="//@types.2"/>
    <attributes name="occi.app.state" mutable="false" required="true" default="" description="State of the application." type="//@types.0" multiple_values="true"/>
    <parent href="Core.xmi#//@kinds[term='resource']"/>
    <actions term="start" scheme="http://schemas.ogf.org/occi/platform/application/action#"/>
    <actions term="stop" scheme="http://schemas.ogf.org/occi/platform/application/action#"/>
  </kinds>
  <kinds term="component" scheme="http://schemas.ogf.org/occi/platform#" title="Component Resource">
    <attributes name="occi.component.state" mutable="false" required="true" description="State of the component." type="//@types.1"/>
    <attributes name="occi.component.state.message" mutable="false" required="false" description="Human-readable explanation of the current instance state.">
      <type href="http://www.eclipse.org/emf/2002/Ecore#//EString"/>
    </attributes>
    <parent href="Core.xmi#//@kinds[term='resource']"/>
    <actions term="start" scheme="http://schemas.ogf.org/occi/platform/component/action#" title=""/>
    <actions term="stop" scheme="http://schemas.ogf.org/occi/platform/component/action#" title=""/>
  </kinds>
  <kinds term="componentlink" scheme="http://schemas.ogf.org/occi/platform#" title="ComponentLink Link">
    <parent href="Core.xmi#//@kinds[term='link']"/>
  </kinds>
  <mixins term="database" scheme="http://schemas.ogf.org/occi/platform#" title="Database Mixin" applies="//@kinds[term='component']">
    <attributes name="occi.database.version" mutable="false" required="true" description="Version of the database.">
      <type href="http://www.eclipse.org/emf/2002/Ecore#//EString"/>
    </attributes>
  </mixins>
  <mixins term="databaselink" scheme="http://schemas.ogf.org/occi/platform#" title="DatabaseLink Mixin" applies="//@kinds[term='componentlink']">
    <attributes name="occi.database.uri" mutable="false" required="true" description="Connection URI for the database instance." type="//@types.2"/>
    <attributes name="occi.database.username" mutable="false" required="false" description="Username." type="//@types.2"/>
    <attributes name="occi.database.token" mutable="false" required="false" description="Token." type="//@types.2"/>
  </mixins>
  <mixins term="app_tpl" scheme="http://schemas.ogf.org/occi/platform#" title="Application Template" applies="//@kinds[term='application']"/>
  <mixins term="res_tpl" scheme="http://schemas.ogf.org/occi/platform#" title="Resource Template" applies="//@kinds[term='application']"/>
  <types xsi:type="ecore:EEnum" name="ApplicationStatus">
    <eLiterals name="active"/>
    <eLiterals name="inactive" value="1"/>
    <eLiterals name="error" value="2"/>
  </types>
  <types xsi:type="ecore:EEnum" name="ComponentStatus">
    <eLiterals name="active"/>
    <eLiterals name="inactive" value="1"/>
    <eLiterals name="error" value="2"/>
  </types>
  <types name="URI" instanceClassName="java.lang.String"/>
</occi:Extension>
